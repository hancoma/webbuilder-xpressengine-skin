<?xml version="1.0" encoding="UTF-8"?>
<widget version="0.2">
    <title xml:lang="ko">Vanner</title>
    <description xml:lang="ko">배너출력 위젯</description>
    <version>0.2</version>
    <date>2011-06-24</date>

    <author email_address="wiley@nurigo.net" link="http://www.nurigo.net">
        <name xml:lang="ko">wiley</name>
    </author>
    <extra_vars>
        <var id="order_target">
            <type>select</type>
            <name xml:lang="ko">정렬 대상</name>
            <description xml:lang="ko">게시물 갯수가 목록수 이하일 경우 아무거나 선택하셔도 됩니다.</description>
            <options>
                <value>list_order</value>
                <name xml:lang="ko">최신 등록순</name>
            </options>
            <options>
                <value>update_order</value>
                <name xml:lang="ko">최근 변경순</name>
            </options>
        </var>
        <var id="order_type">
            <type>select</type>
            <name xml:lang="ko">정렬 방법</name>
            <description xml:lang="ko">게시물 갯수가 목록수 이하일 경우 아무거나 선택하셔도 됩니다.</description>
            <options>
                <value>desc</value>
                <name xml:lang="ko">내림차순</name>
            </options>
            <options>
                <value>asc</value>
                <name xml:lang="ko">올림차순</name>
            </options>
        </var>
        <var id="list_count">
            <type>text</type>
            <name xml:lang="ko">목록수</name>
            <description xml:lang="ko">가져온 목록에서 랜덤으로 출력됩니다. (기본 10개)</description>
        </var>
        <var id="thumbnail_width">
            <type>text</type>
            <name xml:lang="ko">이미지 가로 크기</name>
            <description xml:lang="ko">이미지 가로 크기를 입력하세요.</description>
        </var>
        <var id="thumbnail_height">
            <type>text</type>
            <name xml:lang="ko">이미지 세로 크기</name>
            <description xml:lang="ko">이미지 세로 크기를 입력하세요.</description>
        </var>
        <var id="thumbnail_type">
            <type>select</type>
            <name xml:lang="ko">이미지 자르는 방식</name>
            <options>
                <value>crop</value>
                <name xml:lang="ko">채우기</name>
            </options>
            <options>
                <value>ratio</value>
                <name xml:lang="ko">비율맞추기</name>
            </options>
            <description />
        </var>
        <var id="link_extra_idx">
            <type>text</type>
            <name xml:lang="ko">URL링크</name>
            <description xml:lang="ko">게시판 확장변수의 순번을 입력해 주세요. 미입력시 사용하지 않습니다.</description>
        </var>
        <var id="link_new_window">
            <type>select</type>
            <name xml:lang="ko">URL링크 방식</name>
            <options>
                <value>N</value>
                <name xml:lang="ko">현재창에서 이동</name>
            </options>
            <options>
                <value>Y</value>
                <name xml:lang="ko">새창에서 띄우기</name>
            </options>
            <description />
        </var>
        <var id="module_srls">
            <type>module_srl_list</type>
            <name xml:lang="ko">대상 모듈</name>
            <description xml:lang="ko">선택하신 모듈에 등록된 글을 대상으로 합니다.</description>
        </var>
    </extra_vars>
</widget>
