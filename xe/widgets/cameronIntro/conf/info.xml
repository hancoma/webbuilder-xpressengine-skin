    <extra_vars>
		<group>
			<title xml:lang="ko">사용자 컬러셋</title>
			<var id="cheight">
				<type>text</type>
				<name xml:lang="ko">세로사이즈</name>
				<description xml:lang="ko">기본 150(px) ※ 숫자만 입력하세요.</description>
			</var>
		</group>
	
		<group>
			<title xml:lang="ko">내용1</title>
			<var id="c1_title">
				<type>text</type>
				<name xml:lang="ko">제목</name>
			</var>
			<var id="c1_desc">
				<type>textarea</type>
				<name xml:lang="ko">설명</name>
				<description xml:lang="ko">줄바꿈은 엔터치세요.</description>
			</var>
			<var id="c1_image">
				<type>filebox</type>
				<name xml:lang="ko">아이콘이미지</name>
			</var>
			<var id="c1_icon">
				<type>text</type>
				<name xml:lang="ko">폰트어썸 아이콘명</name>
				<description xml:lang="ko">예) fa-desktop ＊폰트어썸 코드표(http://fontawesome.io/icons/)에 있는 아이콘 이름을 입력하세요. 아이콘 이미지가 없을 경우에 사용합니다.</description>
			</var>
			<var id="c1_iconsize">
				<type>text</type>
				<name xml:lang="ko">폰트어썸 아이콘 사이즈</name>
				<description xml:lang="ko">예) 32 (단위px) 숫자만 입력하세요. 입력하지 않으면 각 스킨의 기본 크기로 지정됩니다.</description>
			</var>
			<var id="c1_color">
				<type>text</type>
				<name xml:lang="ko">컬러</name>
				<description xml:lang="ko">예) #469fea</description>
			</var>
			<var id="c1_link">
				<type>text</type>
				<name xml:lang="ko">링크주소</name>
				<description xml:lang="ko">예) http://cameron.co.kr</description>
			</var>
			<var id="c1_blank">
				<type>select</type>
				<name xml:lang="ko">새창으로 열기</name>
				<options>
					<value>self</value>
					<name xml:lang="ko">현재창에서 열기</name>
				</options>
				<options>
					<value>blank</value>
					<name xml:lang="ko">새창으로 열기</name>
				</options>
			</var>
		</group>

